YT_API_KEY=env
POSTGRES_USER=livepulse
POSTGRES_PASSWORD=change_me
POSTGRES_DB=livepulse
DB_URL=postgres://livepulse:change_me@db:5432/livepulse
FRONTEND_ORIGIN=http://localhost:3000
PORT=4000
POLL_INTERVAL_DEFAULT=5
SEED_ON_START=false
MAX_HISTORY_MINUTES=10080
# Écrit un sample même si la valeur n’a pas changé (utile pour graphes complets)
WRITE_UNCHANGED_SAMPLES=true
 
# --- CORS ---
# Autoriser toutes les origines (false en production recommandé)
CORS_ALLOW_ALL=true
# Liste blanche d'origines autorisées (séparées par des virgules)
# Exemple: CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.exemple.com
CORS_ALLOWED_ORIGINS=

# --- Authentification simple ---
# Mot de passe requis pour accéder à l’interface Admin/Dashboard
ADMIN_PASSWORD=changeme
# Mot de passe requis pour l’accès Client (liste & viewer)
CLIENT_PASSWORD=clientpw
# Secret HMAC pour signer les tokens/cookies
AUTH_SECRET=dev_secret_change_me

# TTL par défaut des tokens (jours) – utilisé pour login/magic
# Les magic links peuvent aussi préciser leur propre TTL via l’API
MAGIC_DEFAULT_TTL_DAYS=60
